<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Añadir nota</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/principal/assets/img/castor.png" />

    <!-- Custom fonts for this template-->
    <link href="/perfil/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/perfil/css/sb-admin-2.min.css" rel="stylesheet">
    <script src="/js/bootstrap.js"></script>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        {{!-- Barra lateral --}}
        {{>lateral_notas}}
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                {{!-- navegacion --}}
                {{>navegacion}}

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Notas</h1>
                    </div>

                    <!-- Notas -->
                    <div class=("col-md-4 mx-auto")>
                        <div class=("card text-center")>
                            <div class=("card-header")>
                                <h3>Nota nueva</h3>
                            </div>
                            <div class="card-body">
                                {{>errores}}
                                <form action="/notas/nota-nueva" method="POST">
                                    <div class="form-group">
                                        <input type="text" name="titulo" class="form-control" placeholder="Título"
                                            value="{{titulo}}" autofocus>
                                    </div>
                                    <div class="form-group">
                                        <textarea name="descripcion" placeholder="Descripción de la nota"
                                            class="form-control">{{descripcion}}</textarea>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block">
                                            Guardar
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- cerrar_sesion-->
                    {{>cerrar_sesion}}
                    {{!-- scripts --}}
                    {{>scripts}}

                </div>
</body>

</html>